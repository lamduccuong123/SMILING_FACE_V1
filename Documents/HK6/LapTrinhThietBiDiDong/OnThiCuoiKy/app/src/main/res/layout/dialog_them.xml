<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtCapNhat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Thêm sách"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHuy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:backgroundTint="#675D5D"
        android:text="Hủy"
        app:layout_constraintBottom_toBottomOf="@+id/btnThem_Them"
        app:layout_constraintStart_toEndOf="@+id/btnThem_Them"
        app:layout_constraintTop_toTopOf="@+id/btnThem_Them"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnThem_Them"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#2196F3"
        android:text="Thêm"
        app:layout_constraintStart_toStartOf="@+id/edtTenSach_Them"
        app:layout_constraintTop_toBottomOf="@+id/edtTenSach_Them" />

    <EditText
        android:id="@+id/edtTenSach_Them"
        android:layout_width="336dp"
        android:layout_height="52dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txtCapNhat2"
        app:layout_constraintStart_toStartOf="@+id/txtCapNhat2"
        app:layout_constraintTop_toBottomOf="@+id/txtCapNhat2" />
</androidx.constraintlayout.widget.ConstraintLayout>