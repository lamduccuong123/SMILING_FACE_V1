<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtHoTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Ho ten sinh vien"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lop"
        app:layout_constraintBottom_toBottomOf="@+id/txtHoTen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.248"
        app:layout_constraintStart_toEndOf="@+id/txtHoTen"
        app:layout_constraintTop_toTopOf="@+id/txtHoTen"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtTinhTrang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tinh Trang"
        app:layout_constraintStart_toStartOf="@+id/txtLop"
        app:layout_constraintTop_toBottomOf="@+id/txtLop" />

    <ImageButton
        android:id="@+id/btnXoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/txtHoTen"
        app:layout_constraintTop_toBottomOf="@+id/txtTinhTrang"
        app:srcCompat="@drawable/xoa" />

    <ImageButton
        android:id="@+id/btnCapNhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/btnXoa"
        app:layout_constraintStart_toEndOf="@+id/btnXoa"
        app:layout_constraintTop_toTopOf="@+id/btnXoa"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/capnhat" />
</androidx.constraintlayout.widget.ConstraintLayout>